<div class="grid gap-y-20 gap-x-20 mx-auto lg:grid-cols-2 xl:max-w-none px-4 lg:px-0">
  {% for author in authorslist %}
    <div class="flex flex-col rounded-lg shadow-lg lg:ml-20">
      <div class="flex-none flex content-center">
        <div class="lg:relative w-16 h-16 lg:w-20 lg:h-40 flex-none self-center ">
          <a href="/authors/{{ author.slug}}/" class="grow-1 lg:absolute lg:-ml-20 lg:p-4 h-full">
            <img class="object-cover h-full {{ post.data.images.align }} rounded-full bg-gray-50 ring-2 ring-vs-yellow-400" src="{{ author.image }}" alt="{{ author.name }} profile picture">
          </a>
        </div>
        <div class="flex flex-col place-content-between flex-1 px-2">
          <a href="/authors/{{ author.slug}}/" class="">
            <h4 class="text-2xl font-semibold {{ colors.headingsCustom or colors.headingsDefault }}">
              {{ author.name }}
            </h4>
            <h5 class="text-gray-700 font-normal text-lg italic text-balance">{{author.jobTitle}}</h5>
          </a>
          <h5 class="font-normal text-lg text-gray-700 ">
            {% if author.researchGroup %}
              <a href="{{author.groupWebsite.url}}">{{author.researchGroup}}, </a>
            {% endif %}
            {% if author.department %}
              <a href="{{author.departmentWebsite.url}}">{{author.department}}, </a>
            {% endif %}
            {% if author.university %}
              <a href="{{author.universityWebsite.url}}">{{author.university}}</a>
            {% endif %}
          </h5>
        </div>
      </div>
      <div class="p-4 flex-none">
        <h5 class="font-normal text-base text-center text-gray-500 ">
          {% renderInlineMarkdown author.bioShort %}
        </h5>
      </div>
      <div class="py-4 grow flex items-end">
        <div class="flex flex-row justify-center w-full">
          {% if author.personalWebsites[0] and author
            .personalWebsites[0]
            .url %}
            <a aria-label="Link to {{ author.personalWebsites[0].label }}" alt="Link to {{ author.personalWebsites[0].label }}" class="text-vs-blue-900 hover:text-vs-yellow-500" href="{{ author.personalWebsites[0].url | url }}">
              {% svg "dev", "mx-2 h-6 w-6 fill-current", author.personalWebsites[0].label %}</a>
          {% endif %}
          {% if author.email %}
            <a aria-label="email {{ author.name }}" alt="email {{ author.name }}" class="text-vs-blue-900 hover:text-vs-yellow-500" href="mailto:{{ author.email}}">
              {% svg "email", "mx-2 h-6 w-6 fill-current" %}</a>
          {% endif %}
          {% for social in author.socialWebsites %}
            {% if social.url %}
              <a aria-label="Link to {{ social.label }}" alt="Link to {{ social.label }}" class="text-vs-blue-900 hover:text-vs-yellow-500" href="{{ social.url | url }}">
                {% svg social.label, "mx-2 h-6 w-6 fill-current", social.label %}
              </a>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>

  {% endfor %}
</div>