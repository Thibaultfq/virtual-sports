<div class="absolute flex flex-col items-start justify-center h-full pt-32 {{ heroSettings.headingTextColor or 'text-white' }} {{ structure.g_pageWidth }}">
  <div class="text-4xl font-semibold leading-tight {{ heroSettings.headingTextCase }} md:text-6xl">
    {% if typedJsStrings %}
      {% typedjs typedJsStrings %}
    {% else %}
      {{ heroSettings.headingText | safe  }}
    {% endif %}

    
  </div>
  <div class="pt-4 pr-12 text-lg font-light md:text-2xl lg:text-3xl {{ heroSettings.subheadingTextColor }}">
    {{ heroSettings.subheadingText | safe }}
  </div>
  {% if heroSettings.buttonText %}
    <div class="w-full mt-12 ">
      <a href="{{ heroSettings.buttonURL }}" class="p-4 rounded-lg {{ heroSettings.buttonTextColor or colors.buttonCustom.text or colors.buttonDefault.text }} {{ heroSettings.buttonBgColor or colors.buttonCustom.bg or colors.buttonDefault.bg }} {{ colors.buttonCustom.textHover or colors.buttonDefault.textHover }} {{ heroSettings.buttonBgHover or colors.buttonCustom.bgHover or colors.buttonDefault.bgHover }} {{ heroSettings.buttonBorder or colors.buttonCustom.border or colors.buttonDefault.border }}">{% renderInlineMarkdown heroSettings.buttonText %}</a>
    </div>
  {% endif %}
  
</div>