<div class="absolute h-full w-full">
  <div class=" h-full max-w-full overflow-hidden main-carousel" data-flickity='{"imagesLoaded": true, "wrapAround": true , "bgLazyLoad": true, "bgLazyLoad": 1, "autoPlay": {{ heroSettings.carouselAutoplay or "false" }}}'>
    {% for carouselCell in heroSettings.carousel %}
      <div class="grow w-full h-full flex justify-center  {{ heroSettings.bg.imagePosition or 'bg-center' }} bg-no-repeat bg-cover carousel-cell" data-flickity-bg-lazyload="{{ carouselCell.image }}">
        <div class="flex flex-col  h-full w-[calc(100%-5rem-20px)]">
          {% if transparentNav == true %}
            <div class="{{structure.nav_height_unscrolled}} flex-none invisible"></div>
          {% endif %}
          <div class="flex flex-col justify-end grow ">
            <h3 class="p-4 md:m-4 self-center text-vs-yellow-500 backdrop-blur-sm text-lg md:text-2xl italic font-extrabold rounded-lg hover:text-vs-yellow-400 leading-tight	 {{ carouselCell.textClass }}">
              {{ carouselCell.text | renderInlineMarkdown }}</h3>
          </div>
        </div>
      </div>
    {% endfor %}

  </div>
</div>

