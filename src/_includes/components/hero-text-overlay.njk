{% if transparentNav == true %}
<div class="{{structure.nav_height_unscrolled}} flex-none invisible"></div>
{% endif %}

<div class="grow flex flex-col items-start justify-start {{ heroSettings.headingTextColor or 'text-white' }} {{ structure.g_pageWidth }}">
  <div class="flex-grow font-semibold leading-tight {{ heroSettings.headingTextCase }} mxsonly:text-2xl text-3xl sm:text-4xl md:text-6xl sm:mt-6 mt-12 lg:mt-20 xl:mt-36 ">
    {% if typedJsStrings and typedJsBase %}
      {% typedjs typedJsStrings,
      typedJsBase %}
    {% else %}
      {{ heroSettings.headingText | safe  }}
    {% endif %}

  </div>
  <div class="mxsonly:my-8 sm:my-10 my-20 lg:my-28 xl:my-32 pr-12 text-xl font-light md:text-3xl lg:text-5xl {{ heroSettings.subheadingTextColor }}">
    {{ heroSettings.subheadingText | safe }}
  </div>
  {% if heroSettings.buttonText %}
    <a href="{{ heroSettings.buttonURL }}" class="flex-none mb-16 sm:mb-16 font-semibold text-lg md:text-xl lg:text-2xl p-2 md:p-4 rounded-lg {{ heroSettings.buttonTextColor or colors.buttonCustom.text or colors.buttonDefault.text }} {{ heroSettings.buttonBgColor or colors.buttonCustom.bg or colors.buttonDefault.bg }} {{ colors.buttonCustom.textHover or colors.buttonDefault.textHover }} {{ heroSettings.buttonBgHover or colors.buttonCustom.bgHover or colors.buttonDefault.bgHover }} {{ heroSettings.buttonBorder or colors.buttonCustom.border or colors.buttonDefault.border }}">{% renderInlineMarkdown heroSettings.buttonText %}</a>
  {% endif %}

</div>