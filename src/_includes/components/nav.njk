{% set navPages = collections.pages | eleventyNavigation %}
<nav x-data="{ open: false, scrolledNav: window.pageYOffset > 20 }" 
    @scroll.window="scrolledNav = (window.pageYOffset > 20) ? true : false" 
    :class="[open? '{{colors.navDefault.mobileBarBg }}' : '{{ colors.navCustom.mobileBarBg }}', scrolledNav? '{{ colors.navDefault.barBg }} shadow' : '{{ colors.navCustom.barBg }}']"
    class="absolute sm:fixed sm:top-0 sm:left-0 z-50 w-full " >
    <div class="sm:px-8 md:px-16 lg:px-32 xl:px-48">
        <div class="flex justify-between h-32 transition-all" 
        :class="scrolledNav ? 'sm:h-16 sm:text-sm' : 'sm:h-32 sm:text-lg' ">
            <div class="flex grow items-center">
                {# small logo hidden on md and above #}
                <a
                    aria-label="Mobile Logo"
                    href="/"
                    class="block md:hidden {{ colors.logoCustom.hover or
                        colors.logoDefault.hover }}"
                    :class="open? '{{ colors.logoCustom.mobile }}' : '{{ colors.logoDefault.mobile }}' "
                    alt="Mobile Logo">
                    {% svg "virtual-sports-square-logo", "fill-current h-28 {{ colors.logoCustom.hover or colors.logoDefault.hover }}", "The Mobile Logo" %}
                </a>
                {# large logo hidden on small, block on md #}
                <a
                    aria-label="Desktop Logo"
                    href="/"
                    :class="[scrolledNav ? 'h-8' : 'h-20', scrolledNav? '{{ colors.logoCustom.desktop }}' : '{{ colors.logoDefault.desktop }}' ]"
                    class=" hidden md:flex grow {{colors.logoCustom.hover or colors.logoDefault.hover }}"
                    alt="Desktop Logo">
                    {# {% svg "virtual-sports-banner-logo", "flex justify-start fill-current h-full w-full drop-shadow-md {{ colors.logoCustom.hover or colors.logoDefault.hover }}", "The Logo" %} #}
                    {% svg "virtual-sports-banner-logo-gradient", "flex justify-start h-full w-full drop-shadow-md {{ colors.logoCustom.hover or colors.logoDefault.hover }}", "The Logo" %}

                </a>
            </div>
            <div
                class="hidden sm:ml-6 sm:flex sm:items-center">
                {# 11ty Nav Plugin loop  #}
                {% for entry in navPages %}
                    <a {% if page.url != entry.url %} href="{{ entry.url | url }}" {% endif %} alt="Link to {{ entry.title }}" :class="scrolledNav? ' {% if page.url == entry.url %} {{ colors.navDefault.textActiveBg }} {{ colors.navDefault.textActive }} {% else %} {{ colors.navDefault.text }} {{ colors.navDefault.textHover }} {% endif %}' : ' {% if page.url == entry.url %} {{ colors.navCustom.textActiveBg }} {{ colors.navCustom.textActive }} {% else %} {{ colors.navCustom.text }} {{ colors.navCustom.textHover }} {% endif %}'" class=" px-3 py-2 font-medium rounded-md items-center focus:outline-none {{ colors.navCustom.textFocus or colors.navDefault.textFocus }} transition duration-150 ease-in-out">
                        {{ entry.title }}
                    </a>
                {% endfor %}
            </div>
            {# Right side of Navbar  #}
            {# MOBILE MENU  #}
            <div
                class="flex items-center pr-4 sm:hidden">
                {# Mobile menu button #}
                <button
                    @click="open = !open"
                    class="inline-flex items-center justify-center p-2 bg-white {{ colors.navCustom.mobileButton or colors.navDefault.mobileButton }}
                        transition duration-150 ease-in-out rounded-md {{ colors.navCustom.mobileButton or colors.navDefault.mobileButton
                        }} {{ colors.navCustom.mobileButtonBgover or colors.navDefault.mobileButtonBgHover }} focus:outline-none {{
                        colors.navCustom.mobileButton or colors.navDefault.mobileButton }} {{ colors.navCustom.mobileButton or
                        colors.navDefault.mobileButton }}"
                    x-bind:aria-label="open ? 'Close main menu' : 'Main menu'"
                    aria-label="Main menu"
                    x-bind:aria-expanded="open">
                    {# Icon when menu is closed.  #}
                    <svg
                        x-state:on="Menu open"
                        x-state:off="Menu closed"
                        :class="{ 'hidden': open, 'block': !open }"
                        class="block w-6 h-6"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                    {# Icon when menu is open.  #}
                    <svg
                        x-state:on="Menu open"
                        x-state:off="Menu closed"
                        :class="{ 'hidden': !open, 'block': open }"
                        class="hidden w-6 h-6"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>
    <div
        x-description="Mobile menu, toggle classes based on menu state."
        x-state:on="Menu open"
        x-state:off="Menu closed"
        :class="{ 'block': open, 'hidden': !open }"
        class="hidden sm:hidden">
        <div
            class="pt-2 pb-3">
            {# 11ty Nav Plugin loop  #}
            {% for entry in navPages %}
                <a {% if page.url != entry.url %} href="{{ entry.url | url }}" {% endif %} alt="Link to {{ entry.title }}" class="block pl-4 pr-4 py-2 {% if page.url == entry.url %}{{ colors.navCustom.mobileBgActive or colors.navDefault.mobileBgActive }} {{ colors.navCustom.mobileTextActive or colors.navDefault.mobileTextActive }}{% else %}{{ colors.navCustom.mobileBg or colors.navDefault.mobileBg }} {{ colors.navCustom.mobileTextHover or colors.navDefault.mobileTextHover }} {{ colors.navCustom.mobileBgHover or colors.navDefault.mobileBgHover }}  {% endif %} text-base font-medium  {{ colors.navCustom.mobileText or colors.navDefault.mobileText }}  focus:outline-none {{ colors.navCustom.mobileTextFocus or colors.navDefault.mobileTextFocus }} {{ colors.navCustom.mobileBgFocus or colors.navDefault.mobileBgFocus }} transition duration-150 ease-in-out">
                    {{ entry.title }}
                </a>
            {% endfor %}
        </div>
    </div>
</nav>