<div class="flex justify-between">
  <div class="flex items-center">
    {% if authorIsMember %}
      <div class="flex-shrink-0 mr-3">
        <a href="/members/{{ post.data.author }}/">
          <img class="w-10 h-10 aspect-square object-cover rounded-full border" src="{{ memberPost.data.image }}" alt=" Photo of {{ memberPost.data.name }}">
        </a>
      </div>
    {% endif %}
    <div>
      <p class="pt-0 mt-0 text-sm font-medium leading-5">
        {% if authorIsMember %}
          <a href="/members/{{ post.data.author }}/" class="hover:underline {{ colors.authorCustom.name or colors.authorDefault.name }}">{{ memberPost.data.name }}</a>
        {% else %}
          <span class="{{ colors.authorCustom.name or colors.authorDefault.name }}">{{ post.data.author | unslugify }}</span>
        {% endif %}
      </p>
      <div class="text-sm leading-5 {{ colors.authorCustom.date or colors.authorDefault.date }}">
        <time datetime="{{ post.date | dateToFormat("yyyy-MM-dd") }}">{{ post.date | dateToFormat("dd LLLL yyyy") }}</time>
      </div>
    </div>
  </div>
  <div class="flex items-center">
    <span class="text-gray-700 pr-2">
      {{ post | readingTime}}
    </span>
  </div>
</div>